{
  "name": "supertest-jest",
  "version": "1.0.0",
  "description": "automated tests using jest and supertest",
  "main": "index.js",
  "scripts": {
    "test-dev": "cross-env ENVIRONMENT='dev' jest",
    "test-prod": "cross-env ENVIRONMENT='prod' jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "keywords": [
    "jest",
    "qa",
    "automated",
    "test"
  ],
  "author": "Rafael Bercam Medeiros",
  "license": "ISC",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.1.3"
  }
}
